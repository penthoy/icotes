# Example environment configuration for icotes
# Copy to .env and adjust values.

SITE_URL=localhost
PORT=8000

# Single port configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000
FRONTEND_HOST=localhost
FRONTEND_PORT=8000
FRONTEND_URL=http://localhost:8000

# Vite-accessible environment variables
VITE_BACKEND_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000/api
VITE_SITE_URL=localhost
VITE_WS_URL=ws://localhost:8000/ws

# Workspace configuration
WORKSPACE_ROOT=/workspace
VITE_WORKSPACE_ROOT=/workspace

# Media handling configuration (Phase 0)
# Base directory (relative or absolute) where uploaded chat media is stored
MEDIA_BASE_DIR=workspace/.icotes/media
# Subdirectories used for organizing media
MEDIA_UPLOAD_DIR=uploads
MEDIA_TEMP_DIR=tmp
MEDIA_MAX_FILE_SIZE_MB=25
# Comma-separated allowed MIME type prefixes (image/,video/,audio/,application/pdf)
MEDIA_ALLOWED_TYPES=image/,video/,audio/,application/pdf
# Optional: enable basic filename sanitization (1=true)
MEDIA_SANITIZE_FILENAMES=1

# Vite-exposed media (if frontend needs direct path hints)
VITE_MEDIA_MAX_FILE_SIZE_MB=25
VITE_MEDIA_ALLOWED_TYPES=image/*,video/*,audio/*,.pdf

# API keys (leave blank in example)
OPENAI_API_KEY=
OPENROUTER_API_KEY=
GROQ_API_KEY=
GOOGLE_API_KEY=
ANTHROPIC_API_KEY=
CEREBRAS_API_KEY=

# Agent runtime limits (recommended production values)
AGENT_MAX_TOKENS=8000
AGENT_AUTO_CONTINUE=1
AGENT_MAX_CONTINUE_ROUNDS=10
